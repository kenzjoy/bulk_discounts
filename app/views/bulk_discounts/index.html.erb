<h2><%= @merchant.name %>'s Bulk Discounts</h2>

<% @merchant.bulk_discounts.each do |discount| %>
  <div id="merchant-discount<%= discount.id %>">
    <ul>  
      <li>Save <%= discount.percentage_discount %>% when you purchase <%= discount.quantity_threshold %> of the same item.</li>
    </ul>
  </div>
<% end %>